<div class="col-6">
  <div class="card">
    <img class="card-img-top" src="{{img}}" alt="{{name}}">
    <div class="card-body">
      <h6 class="card-title">{{title}}
        {{#if isHot}}
        <span class="badge text-bg-warning rounded-pill me-2 mb-2">HOT!</span>
        {{/if}}
        {{#if isNew}}
        <span class="badge text-bg-primary rounded-pill me-2 mb-2">Нове</span>
        {{/if}}
      </h6>
      <div>
        {{#if isFast}}
        <button class="btn btn-sm btn-success mb-2">Швидка доставка</button>
        {{/if}}
        {{#if isFree}}
        <button class="btn btn-sm btn-secondary mb-2">Безкоштовна доставка</button>
        {{/if}}
      </div>

      <h5>{{name}}</h5>
      {{#with review}}
      <p>{{amount}} {{text}}</p>
      {{/with}}
      <h4>{{price}}</h4>
      <p>{{delivery}}</p>
      {{#each buttons}}
      {{#if isPrimary}}<button href="{{link}}" class="btn btn-primary mb-2">{{text}}</button>{{/if}}
      {{#if isSecondary}}<button href="{{link}}" class="btn btn-secondary mb-2">{{text}}</button>{{/if}}
      {{/each}}

      <ul class="mt-2">
        {{#each characteristics}}
        <li class="mb-2">{{title}}: {{value}}</li>
        {{/each}}
      </ul>

    </div>
  </div>
</div>