<div class="card mb-3">
  <div class="card-body p-2">
    <div class="row">
      <div class="col-2">
        <img src="{{image}}" alt="{{name}}">
      </div>

      <div class="col-5">
        <h6>{{name}}</h6>
        <div>{{description}}</div>
      </div>

      <div class="col-2 pt-4">
        <div class="mt-2">{{#with price}} {{title}}:<br>{{value}} {{/with}}</div>
      </div>

      <div class="col-1 pt-4">
        <div class="mt-3">{{amount}}</div>
      </div>

      <div class="col-2 pt-2">
        {{#each buttons}}
        <button
          class="btn btn-sm mt-1 mb-3{{#if isPrimary}} btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</button>
        {{/each}}
      </div>
    </div>
  </div>
</div>