<div class="list">
  <div class="row">
    <div class="col-2">
      <p class="mt-3 mb-1">{{number}}</p>
      <strong>{{status}}</strong>
    </div>

    <div class="col-2 pt-4">
      {{#with amount}} {{title}}: <br><b>{{value}}</b> {{/with}}
    </div>

    <div class="col-6 m-0">
      {{#each images}}
      <img class="mx-1" src="{{this}}" alt="{{this}}">
      {{/each}}
    </div>

    {{#with button}}
    <div class="col-2 pt-3">
      <button class=" mt-3 m-0{{#if isPrimary}} btn btn-sm btn-primary {{/if}}" href="{{link}}">{{text}}</button>
    </div>
    {{/with}}

  </div>

  <div>
    <hr>
  </div>

</div>