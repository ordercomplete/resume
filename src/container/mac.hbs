<div>

  <div class="card"
    style="background-image: linear-gradient( 87.6deg,  rgba(241,16,48,1) 1.7%, rgba(242,171,33,1) 13.3%, rgba(226,242,33,1) 24.5%, rgba(12,207,22,1) 34.8%, rgba(75,205,200,1) 47.2%, rgba(8,39,211,1) 58.9%, rgba(150,101,229,1) 67.6%, rgba(80,6,198,1) 78.1%, rgba(246,98,248,1) 89.2%, rgba(248,98,181,1) 103.3%, rgba(228,129,144,1) 113.9% );">
    <div class="card-body">

      <h1>{{name}}</h1>
      <h2>{{description}}</h2>
      <h3>price: {{price}} ðŸ‘€</h3>
      <h4>category - {{category}}</h4>
      <section>
        <h4>Features</h4>
        {{#with features}}

        <div class="card"
          style="background-image: linear-gradient( 89.5deg,  rgba(4,29,55,1) -0.1%, rgba(2,67,135,1) 25.1%, rgba(28,133,243,1) 49.6%, rgba(115,181,250,1) 74.5%, rgba(214,239,253,1) 99.3% );">
          <div class="card-body">
            <div class="row g-3">

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Processor</h5>
                    {{#with processor}}
                    <section>
                      <p>brand: {{brand}}</p>
                      <p>model: {{model}}</p>
                      <p>speed: {{speed}}</p>
                      <p>cores: {{cores}}</p>
                      <p>cache: {{cache}}</p>
                    </section>
                    {{/with}}
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Memory</h5>
                    {{#with memory}}
                    <section>
                      <p>type: {{type}}</p>
                      <p>size: {{size}}</p>
                      <p>speed: {{speed}}</p>
                    </section>
                    {{/with}}
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Storage</h5>
                    {{#with storage}}
                    <section>
                      <p>type: {{type}}</p>
                      <p>size: {{size}}</p>
                    </section>
                    {{/with}}
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Display</h5>
                    {{#with display}}
                    <section>
                      <p>size: {{size}}</p>
                      <p>resolution: {{resolution}}</p>
                      <p>technology: {{technology}}</p>
                      <p>color space: {{color_space}}</p>
                      <p>brightness: {{brightness}}</p>
                      <p>refresh rate: {{refresh_rate}}</p>
                    </section>
                    {{/with}}
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Graphics</h5>
                    {{#with graphics}}
                    <section>
                      <p>brand: {{brand}}</p>
                      <p>model: {{model}}</p>
                      <p>speed: {{speed}}</p>
                    </section>
                    {{/with}}
                  </div>
                </div>
              </div>

              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h5>ports</h5>
                    {{#each ports}}
                    <section>
                      <p>type: {{type}}</p>
                      <p>count: {{count}}</p>
                      {{#if features}}
                      <p>features:</p>
                      {{#each features}}
                      <ul>
                        <li>{{this}}</li>
                      </ul>
                      {{/each}}
                      {{/if}}
                    </section>
                    {{/each}}
                  </div>
                </div>
              </div>


              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Battery</h5>
                    <section>
                      {{#with battery}}
                      <p>type: {{type}}</p>
                      <p>capacity: {{capacity}}</p>
                      <p>life: {{life}}</p>
                      {{/with}}
                    </section>
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Weight:</h5>
                    <section>
                      <p>{{weight}}</p>
                    </section>
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Dimensions:</h5>
                    <section>
                      {{#with dimensions}}
                      <p>height: {{height}}</p>
                      <p>width: {{width}}</p>
                      <p>depth: {{depth}}</p>
                      {{/with}}
                    </section>
                  </div>
                </div>
              </div>

              <div class="col-6">
                <div class="card">
                  <div class="card-body">
                    <h5>Operating system:</h5>
                    <section>
                      <p>{{operating_system}}</p>
                    </section>
                  </div>
                </div>
              </div>

              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h5>accessories</h5>
                    <section>
                      {{#each accessories}}
                      <section>
                        <p>name: {{name}}</p>
                        <p>price: {{price}}</p>
                        {{#if @last}} {{else}}
                        <hr>{{/if}}
                      </section>
                      {{/each}}
                    </section>
                  </div>
                </div>
              </div>
              {{/with}}
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>