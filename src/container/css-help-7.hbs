  </summary>





  <div class="alerts-container">

    <div class=" col-7">
      <div class="alert  a-primary alert-info" style="color: red">
        .example {<br>
        background-color: lch(70, 50, 120);<br>
        }<br>
      </div>
    </div>

    <div class=" col-5">
      <div class="a-secondary">
        <div class="alert alert-info">
          <h5>lch()</h5>
        </div>
      </div>
    </div>

  </div>




  <table class="rounded">

    <tr class="text-center">
      <th>Значення</th>
      <th>Опис</th>
    </tr>


