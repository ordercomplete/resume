<div class="card"
  style="background-image: linear-gradient( 132.6deg,  rgba(71,139,214,1) 23.3%, rgba(37,216,211,1) 84.7% );">

  <div class="card-header">

    <div class="card my-2">
      <div class="card-body"
        style="background-image: radial-gradient( circle 993px at 0.5% 50.5%,  rgba(137,171,245,0.37) 0%, rgba(245,247,252,1) 100.2% );">

        {{>header-bio}}

      </div>
    </div>
  </div>



  <div class="card-body">
    <div>
      {{> title data="Work" big=true}}
    </div>
    {{#with main}}


    {{#each works}}


    <div class="card my-3">
      <div class="card-body">

        <div>
          <div class="my-2">{{position}}</div>
          <div class="my-2">
            {{duration.from}} -
            {{#if duration.to}} {{duration.to}}
            {{else}} (досі працюю) {{/if}}
          </div>

          <div class="my-2">
            {{#if company.url}}
            {{> link text=company.name href=company.url blank=true noLine=true}}
            {{else}} <b>{{company.name}}</b>
            {{/if}}
          </div>

          <div class="my-2">
            <strong>
              Projects ({{projectAmount}})
            </strong>
          </div>

          <section>
            {{#each projects}}
            <div>
              <div>{{> link text=name href=url blank=true noLine=true}}</div>

              <div>
                <p>about: {{about}}</p>
              </div>

              <div>
                <em>Project stacks ({{stackAmount}})</em>

                <p>{{#each stack}} {{name}} <br>{{/each}}</p>
              </div>

              <div>
                <em>Project awards ({{awardAmount}})</em>

                <p>{{#each awards}} {{name}} <br>{{/each}}</p>
              </div>

            </div>
            {{/each}}
          </section>
        </div>

      </div>
    </div>
    {{/each}}

    {{/with}}

  </div>
</div>


