{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
  <main>
    <section>
      <div>
        {{> title data=title big=true}}
      </div>
      <ul>
        {{#each works}}
        <li>
          <div>{{position}}</div>

          <br>

          <div>
            {{duration.from}} -
            {{#if duration.to}} {{duration.to}}
            {{else}} (досі працюю) {{/if}}
          </div>

          <br>

          <div>
            {{#if company.url}}
            {{> link text=company.name href=company.url blank=true noLine=true}}
            {{else}} <b>{{company.name}}</b>
            {{/if}}
          </div>

          <br>
          <br>

          <div>
            <strong>
              Projects ({{projectAmount}})
            </strong>
          </div>

          <br>

          <ul>
            {{#each projects}}
            <li>
              <div>{{> link text=name href=url blank=true noLine=true}}</div>
              <br>
              <div>
                <p>about: {{about}}</p>
              </div>
              <br>
              <div>
                <em>Project stacks ({{stackAmount}})</em>
                <br>
                <p>{{#each stack}} {{name}} <br>{{/each}}</p>
              </div>
              <br>
              <div>
                <em>Project awards ({{awardAmount}})</em>
                <br>
                <p>{{#each awards}} {{name}} <br>{{/each}}</p>
              </div>

            </li>
            {{/each}}
          </ul>
        </li>
        <br>
        {{/each}}
      </ul>
      <div>
        <p>{{text}}</p>
      </div>
    </section>
  </main>
  {{/with}}
</div>

