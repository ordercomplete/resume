{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}

  {{#with summary}}
  <section>
    <div>
      {{> title data=title big=true}}
    </div>
    <div>
      <p>
        {{text}}
      </p>
    </div>
  </section>
  {{/with}}

  {{#with experience}}
  <section>
    <div>
      {{> title data=title big=false}}
    </div>
    <div>
      <p>
        {{text}}
      </p>
    </div>
  </section>
  {{/with}}

  {{/with}}
</div>

