{{#with navigation}}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body p-0">
        <div class="nav">
          {{#each links}}
          <div class="nav-item ">
            <a href="{{href}}" class="nav-link {{#unless href}} disabled {{/unless}}">{{text}}</a>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
{{/with}}


<div class="row mt-5">
  {{#with formBlock}}
  <div class="col-8">
    <h2 class="mb-3">{{header}}</h2>
    <p>{{rating.title}}: {{rating.value}}</p>

    <div>
      {{#with actionBlock}}
      <div class="nav nav-tabs">
        {{#each tabs}}
        <div class="nav-item col-4">
          <a class="nav-link text-center{{#if isActive}} active disabled {{/if}}" {{#if isActive}} active disabled
            {{/if}} href="#">{{text}}</a>
        </div>
        {{/each}}
      </div>

      <div class="my-5">
        <hr>
      </div>

      <div class="card">
        {{#with report}}
        <div class="card-body">
          <p>{{title}}</p>
          <button class="btn btn-secondary" href="{{button.link}}">{{button.text}}</button>
        </div>
        {{/with}}

      </div>
      {{/with}}
    </div>

    <div class="my-5">
      <hr>
    </div>

    <div>
      {{#with feedbackBlock}}
      <h3 class="mt-5 mb-5">{{title}}</h3>
      <table class="row my-4">
        <tr class="col-4">
          {{#each buttons}}
          <td>
            <button
              class="btn ms-2 me-1 {{#if isWarning}} btn-warning{{/if}} {{#if isSuccess}} btn-success{{/if}} {{#if isDanger}} btn-danger{{/if}}"
              href="{{link}}">{{text}}
            </button>
          </td>
          {{/each}}
        </tr>
      </table>

      {{/with}}
    </div>

  </div>


  <div class="col-4 p-2 ps-0">
    {{#with goodsInfo}}
    <div class="card mb-3">
      <div class="card-body">
        <div class="col-6">
          <img src="{{photo}}" alt="{{name}}">
        </div>
        <h6 class="mt-3 mb-0">{{name}}</h6>

      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body ">
        <h5>{{price}}</h5>
        {{#if inMarket}} <p class="mb-0">Є в наявності</p> {{else}} <p class="mb-0">Немає в наявності</p>{{/if}}
        {{#each buttons}}
        <button href="{{link}}"
          class="btn mt-2{{#if isPrimary}} btn-primary{{/if}} {{#if isSecondary}} btn-secondary{{/if}}">{{text}}</button>
        {{/each}}

      </div>


    </div>

    <div class="card">
      {{#with seller}}
      <div class="card-body">
        <div>{{title}}: <b>{{value}}</b> </div>
      </div>
      {{/with}}
    </div>
    {{/with}}

  </div>

  {{/with}}
</div>

<div class="my-4">
  <hr>
</div>


{{#each reviewList}}
{{>reviewItem}}
{{/each}}

{{#with service}}
<div class="card text-bg-success">
  <div class="card-body text-center">
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    {{#each buttons}}
    <button class="btn btn-primary" href="{{link}}">{{text}}</button>
    {{/each}}
  </div>

</div>
{{/with}}

<div class="my-5">
  <hr>
</div>

<div class="row g-5 ms-0">
  <table>
    <tr>
      {{#each footer}}
      <td>
        <button class="btn m-0 p-0">
          <div>
            {{#each this}}
            <div class="nav">
              <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
            </div>
            {{/each}}
          </div>
        </button>
      </td>
      {{/each}}
    </tr>
  </table>
</div>